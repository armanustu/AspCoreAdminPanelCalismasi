<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle show" id="notificationDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="true">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count-symbol bg-danger"></span>
    </a>
   
 <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list show" aria-labelledby="notificationDropdown" data-bs-popper="none">
        <h6 class="p-3 mb-0">Notifications</h6>
        @foreach (var item in Model)
        {
            
        
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="@item.NotificationColor">
                        <i class="@item.NotificationSymbol"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.NoticationType</h6>
                <p class="text-gray ellipsis mb-0"> @item.NotificationDetails </p>
            </div>
        </a>
        }
