@using DataEntityLayer.Concrete
@model List<Writer>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Tickets</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Mail</th>                          
                                <th>Şifre</th>
                                <th>Durum</th>
                                
                                <th>işlemler</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Writer/assets/images/faces/face1.jpg" class="me-2" alt="image">
                                    </td>
                                    <td> @item.WriterID</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.WriterName</label>
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.WriterMail</label>
                                    </td>                                    
                                    <td>@item.WriterPassword</td>
                                    <td>@item.WriterStatus</td>
                                    <td><a href="/Writer/WriterEditProfile/@item.WriterID" class="btn btn-dark">Detay</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>